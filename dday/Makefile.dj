#

OBJECTS =  $(GAME)

all: gamex86.dxe

gamex86.dxe:	$(OBJECTS)
	$(DXE3GEN) -U -E _GetGameAPI $(OBJECTS) -o gamex86.dxe

clean:
	rm -f *.o
	rm -f ai/*.o
	rm -f gbr/*.o
	rm -f grm/*.o
	rm -f ita/*.o
	rm -f jpn/*.o
	rm -f pol/*.o
	rm -f rus/*.o
	rm -f usa/*.o
	rm -f usm/*.o

DO_AS=$(CC) -x assembler-with-cpp

%.o : %.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $< -o $@

%.o: %.S
	$(DO_AS) $(CFLAGS) $(CPPFLAGS) -c $< -o $@

%.o: %.s
	$(DO_AS) $(CFLAGS) $(CPPFLAGS) -c $< -o $@
